{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@packages/*": [
        "../packages/*"
      ]
    }
  },
  "include": [
    "../packages/*/src",
    "src"
  ]
}