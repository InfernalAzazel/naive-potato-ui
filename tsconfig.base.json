{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "sourceMap": false,
    "removeComments": false,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext",
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "paths": {
      "@naive-potato-ui/*": [
        "packages/*/src"
      ],
      "@dts/*": [
        "types/*"
      ]
    }
  }
}